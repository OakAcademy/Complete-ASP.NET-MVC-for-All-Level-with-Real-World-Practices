
@{
    ViewBag.Title = "CategoryPostList";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@model DTO.GeneralDTO
<!-- ##### Archive List Posts Area Start ##### -->
<div class="vizew-archive-list-posts-area mb-80">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <!-- Archive Catagory & View Options -->
                <div class="archive-catagory-view mb-50 d-flex align-items-center justify-content-between">
                    <!-- Catagory -->
                    <div class="archive-catagory">
                        <h4><i class="" aria-hidden="true"></i> @Model.CategoryName </h4>
                    </div>
                    <!-- View Options -->

                </div>

                <div class="row">

                    <div class="col-12">

                        <div class="section-heading">

                            <a href="@Model.Adslist[1].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[1].ImagePath" /></a>
                        </div>

                    </div>


                </div>
                <br />
                @if (Model.Videos != null && Model.Videos.Count != 0)
                {
                    foreach (var item in Model.Videos)
                    {
                        <div class="single-post-area style-2">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <a href="@item.OriginalVideoPath"> @Html.Raw(item.VideoPath)</a>

                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <!-- Post Content -->
                                    <div class="post-content mt-0">
                                        @*<a href="#" class="post-cata cata-sm cata-success">Sports</a>*@
                                        <a href="@item.OriginalVideoPath" class="post-title mb-2">@item.Title</a>
                                        <div class="post-meta d-flex align-items-center mb-2">
                                            <a href="#" class="post-author">OAK Academy</a>
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    foreach (var item in Model.CategoryPostList)
                    {
                        <div class="single-post-area style-2">
                            <div class="row align-items-center">
                                <div class="col-12 col-md-6">
                                    <!-- Post Thumbnail -->
                                    <div class="post-thumbnail">
                                        <a href="@Url.RouteUrl("PostDetail",new { @ID=item.ID, @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink=item.SeoLink})"> <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt=""></a>

                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <!-- Post Content -->
                                    <div class="post-content mt-0">
                                        @*<a href="#" class="post-cata cata-sm cata-success">Sports</a>*@
                                        <a href="@Url.RouteUrl("PostDetail",new { @ID=item.ID, @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink=item.SeoLink})" class="post-title mb-2">@item.Title</a>
                                        <div class="post-meta d-flex align-items-center mb-2">
                                            <a href="#" class="post-author">OAK Academy</a>
                                            <i class="fa fa-circle" aria-hidden="true"></i>
                                            <a href="#" class="post-date">@item.AddDate.ToString("dd.MM.yyyy dddd")</a>
                                        </div>
                                        <p class="mb-2">@item.ShortContent</p>
                                        <div class="post-meta d-flex">
                                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @item.CommentCount</a>
                                            <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

                <!-- Single Post Area -->
                <!-- Single Post Area -->



            </div>

            <div class="col-12 col-md-6 col-lg-4">
                <div class="sidebar-area">

                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Sidebar Widget ***** -->
                    <!-- ***** Single Widget ***** -->

                    <br />
                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget mb-50">
                        <!-- Section Heading -->
                        <div class="section-heading style-2 mb-30">
                            <h4>Breaking Trainings</h4>
                            <div class="line"></div>
                        </div>
                        @foreach (var item in Model.BreakingPost)
                        {
                            <div class="single-blog-post d-flex">
                                <div class="post-thumbnail">
                                    <img src="~/Areas/Admin/Content/PostImage/@item.ImagePath" alt="">
                                </div>
                                <div class="post-content">
                                    <a href="@Url.RouteUrl("PostDetail",new { @ID=item.ID, @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName), @SeoLink=item.SeoLink})" class="post-title">@item.Title</a>
                                    <div class="post-meta d-flex justify-content-between">
                                        <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @item.CommentCount</a>
                                        <a href="#"><i class="fa fa-eye" aria-hidden="true"></i> @item.ViewCount</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Single Blog Post -->
                        <!-- Single Blog Post -->
                    </div>

                    <!-- ***** Single Widget ***** -->
                    <!-- ***** Single Widget ***** -->
                    <div class="single-widget add-widget mb-50">
                        <a href="@Model.Adslist[0].Link" target="_blank"><img src="~/Areas/Admin/Content/AdsImage/@Model.Adslist[0].ImagePath" alt=""></a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Archive List Posts Area End ##### -->
