<!DOCTYPE html>
<html lang="en">
@using DTO
@{
    var layoutdto = (HomeLayoutDTO)ViewData["LayoutDTO"];
    List<CategoryDTO> categories = layoutdto.Categories;
    FavDTO favdto = layoutdto.FavDTO;
    List<MetaDTO> metalist = layoutdto.Metalist;
    AddressDTO address = layoutdto.Address;
    List<PostDTO> hotnews = layoutdto.HotNews;

}
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @foreach (var item in metalist)
    {

        <meta name="@item.Name" content="@item.MetaContent">
    }
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>@favdto.Title</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Areas/Admin/Content/FavImage/@favdto.Fav">

    <!-- Stylesheet -->

    <link href="~/Content2/style.css" rel="stylesheet" />
    <link href="~/Content/toastr/toastr.css" rel="stylesheet" />

</head>

<body>
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">

        <!-- Navbar Area -->
        <div class="mag-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <!-- Menu -->
                <nav class="classy-navbar justify-content-between" id="magNav">

                    <!-- Nav brand -->
                    <a href="@Url.RouteUrl("Home")" class="nav-brand"><img src="~/Areas/Admin/Content/FavImage/@favdto.Logo" width="100" height="80" style="max-width:80% !important" alt=""></a>

                    <!-- Navbar Toggler -->
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler"><span></span><span></span><span></span></span>
                    </div>

                    <!-- Nav Content -->
                    <div class="nav-content d-flex align-items-center">
                        <div class="classy-menu">

                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    @foreach (var item in categories)
                                    {
                                        <li><a href="@Url.RouteUrl("Category",new { @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName)})">@item.CategoryName</a></li>
                                    }

                                    <li><a href="@Url.RouteUrl("Category",new { @CategoryName = "video" })">Video</a></li>
                                    <li><a href="/contactpage">Contact</a></li>
                                    <li><a href="/contactpage">Change Template</a></li>
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>

                        <div class="top-meta-data d-flex align-items-center">
                            <!-- Top Search Area -->
                            <div class="top-search-area">
                                <form action="/search2" method="post">
                                    <input type="search" name="SearchText" id="topSearch" placeholder="Search and hit enter...">
                                    <button type="submit" class="btn"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            </div>
                            <!-- Login -->
                            <a href="/Admin/Login/Index" class="login-btn"><i class="fa fa-user" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Hero Area Start ##### -->
    @RenderBody()
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <!-- Logo -->
                        <a href="@Url.RouteUrl("Home")" class="foo-logo"><img src="~/Areas/Admin/Content/FavImage/@favdto.Logo" width="300" height="250" alt=""></a>
                        <div class="footer-social-info">
                            <a href="@layoutdto.Facebook.Link" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="@layoutdto.Instagram.Link" class="instagram"><i class="fa fa-instagram"></i></a>
                            <a href="@layoutdto.Twitter.Link" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="@layoutdto.Linkedin.Link" class="linkedin"><i class="fa fa-linkedin"></i></a>
                            <a href="@layoutdto.Youtube.Link" class="youtube"><i class="fa fa-youtube-play"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Footer Widget Area -->
                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">Quick Menu</h6>
                        <nav class="footer-widget-nav">
                            <ul>
                                @foreach (var item in categories)
                                {

                                    <li><a href="@Url.RouteUrl("Category",new { @CategoryName=BLL.SeoLink.GenerateUrl(item.CategoryName)})"><i class="fa fa-angle-double-right" aria-hidden="true"></i> @item.CategoryName</a></li>
                                }

                                <li><a href="@Url.RouteUrl("Category",new { @CategoryName="video"})"><i class="fa fa-angle-double-right" aria-hidden="true"></i> Video</a></li>
                                <li><a href="/contactpage"><i class="fa fa-angle-double-right" aria-hidden="true"></i>Contact</a></li>
                                <li><a href="http://www.mvctechnologymania.com/"><i class="fa fa-angle-double-right" aria-hidden="true"></i>Change Template</a></li>

                            </ul>
                        </nav>
                    </div>
                </div>

                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">Address</h6>
                        <!-- Single Blog Post -->
                        <p>@address.AddressContent</p>
                        <p><strong>Email: </strong>@address.Email</p>
                        <p><strong>Phone: </strong>@address.Phone</p>
                        <p><strong>Fax: </strong>@address.Fax</p>
                    </div>
                </div>

                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        @Html.Raw(address.SmallMapPath)
                    </div>
                </div>

            </div>
        </div>

        <!-- Copywrite Area -->


    </footer>
    <!-- ##### Footer Area End ##### -->
    <!-- ##### All Javascript Script ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="~/Content2/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/Content2/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/Content2/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="~/Content2/js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="~/Content2/js/active.js"></script>

    <script src="~/Content/toastr/toastr.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var result = "@ViewData["CommentState"]";
            if (result != "") {
                if (result == "Success")
                    toastr.success(result);
                else
                    toastr.error(result);



            }

        });


    </script>
</body>

</html>